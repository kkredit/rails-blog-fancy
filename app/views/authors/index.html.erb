<% if !notice.blank? %>
    <p id="notice" class="alert alert-success"><%= notice %></p>
<% end %>

<h1>Authors</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th class="col-md-3">First Name</th>
      <th class="col-md-3">Last Name</th>
      <th class="col-md-3">Email</th>
      <th class="col-md-3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @authors.each do |author| %>
      <tr>
        <td class="col-md-3"><%= author.fname %></td>
        <td class="col-md-3"><%= author.lname %></td>
        <td class="col-md-3"><%= author.email %></td>
        <td class="col-md-3">
          <%= link_to author, class: "btn btn-default btn-sm" do %>
          <i class="glyphicon glyphicon-eye-open"></i> Show
          <% end %>
          <%= link_to edit_author_path(author), class: "btn btn-default btn-sm" do %>
          <i class="glyphicon glyphicon-eye-open"></i> Edit
          <% end %>
          <%= link_to author, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" do %>
          <i class="glyphicon glyphicon-eye-open"></i> Delete
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <br/>
  <%= link_to 'New Author', new_author_path, :class => "btn btn-primary" %>
